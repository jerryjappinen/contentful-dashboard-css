{
  "name": "Contentful Tweaks",
  "version": "1.0",
  "description": "Optimize Contentful dashboard UI",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/appicon-16.png",
      "32": "icons/appicon-32.png",
      "48": "icons/appicon-48.png",
      "128": "icons/appicon-128.png"
    }
  },
  "icons": {
    "16": "icons/appicon-16.png",
    "32": "icons/appicon-32.png",
    "48": "icons/appicon-48.png",
    "128": "icons/appicon-128.png"
  }
}
